<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
       <%= render 'books/form', book: @booknew %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group detail</h2>
      <table class="table">
        <tr>
          <td><%= attachment_image_tag(@group, :group_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= @group.name %></td>
          <td><%= @group.introduction %></td>
          <% if @group.user == current_user %>
          <td><%= link_to "Edit", edit_group_path(@group), class: "btn btn-sm btn-success" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>